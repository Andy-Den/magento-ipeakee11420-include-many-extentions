<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <balance translate="label">
            <label>Balance</label>
            <sort_order>100</sort_order>
        </balance>
    </tabs>
    <sections>
        <balance_ajax translate="label">
            <label>Ajax</label>
            <tab>balance</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <comment><![CDATA[Ajax Extension Provided By <a href="http://www.balanceinternet.com.au/" target="_blank">Balance Internet</a><br/>]]></comment>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <include_form_key>
                            <label>Form Key</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <comment><![CDATA[Include form key in ajax]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </include_form_key>
                        <to_disable_forms>
                            <label>To Disable Forms on front end</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <comment><![CDATA[Switch to disable froms on front end before form key return from ajax]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </to_disable_forms>
                    </fields>
                </settings>
            </groups>
        </balance_ajax>
    </sections>
</config>
