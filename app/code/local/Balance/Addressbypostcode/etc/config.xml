<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Balance_Addressbypostcode>
            <version>0.1.1</version>
        </Balance_Addressbypostcode>
    </modules>
    <global>
        <models>
            <addressbypostcode>
                <class>Balance_Addressbypostcode_Model</class>
