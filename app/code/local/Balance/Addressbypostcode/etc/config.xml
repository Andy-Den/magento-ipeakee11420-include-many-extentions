                <class>Balance_Addressbypostcode_Model_Mysql4</class>
                <entities>
                    <address>
                        <table>balance_addressbypostcode</table>
                    </address>
                </entities>
            </addressbypostcode_mysql4>
        </models>
        <resources>
            <balance_addressbypostcode_setup>
                <setup>
                    <module>Balance_Addressbypostcode</module>
                    <connection>
                        <use>core_setup</use>
                    </connection>
                </setup>
            </balance_addressbypostcode_setup>
        </resources>
        <helpers>
            <addressbypostcode>
                <class>Balance_Addressbypostcode_Helper</class>
            </addressbypostcode>
        </helpers>
