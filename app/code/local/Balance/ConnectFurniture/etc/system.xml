<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <connectfurniture translate="label" module="connectfurniture">
            <label>ConnectFurniture Feed</label>
            <tab>balance</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <export translate="label">
                    <label>Export</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <format translate="label">
                            <label>Xml Format</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </format>
                        <store translate="title">
							<label>Store</label>
							<frontend_type>select</frontend_type>
							<source_model>connectfurniture/store</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</store>
                        <feeds translate="label">
                            <label>Export</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>connectfurniture/adminhtml_system_config_button</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Save Xml Format before run.</comment>
                        </feeds>
                    </fields>
                </export>
            </groups>
        </connectfurniture>
    </sections>
</config>