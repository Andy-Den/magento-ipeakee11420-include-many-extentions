<?xml version="1.0"?>
<config>
    <modules>
        <Milandirect_Catalog>
            <version>0.0.1</version>
        </Milandirect_Catalog>
    </modules>
    <global>
        <blocks>
            <catalog>
                <rewrite>
                    <product_list_toolbar>Milandirect_Catalog_Block_Product_List_Toolbar</product_list_toolbar>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <catalog_resource_eav_mysql4>
                <rewrite>
                    <category_flat>Milandirect_Catalog_Model_Resource_Eav_Mysql4_Category_Flat</category_flat>
                </rewrite>
            </catalog_resource_eav_mysql4>
            <catalog_resource>
                <rewrite>
                    <product_attribute_backend_media>Milandirect_Catalog_Model_Resource_Product_Attribute_Backend_Media</product_attribute_backend_media>
                </rewrite>
            </catalog_resource>
        </models>
        <resources>
            <milandirect_catalog_setup>
                <setup>
                    <module>Milandirect_Catalog</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </milandirect_catalog_setup>
        </resources>
        <helpers>
            <catalog>
                <rewrite>
                    <data>Milandirect_Catalog_Helper_Data</data>
                </rewrite>
            </catalog>
        </helpers>
    </global>
</config>