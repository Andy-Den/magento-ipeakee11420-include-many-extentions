/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>

<?php if($this->canShowBlock()): ?>
<form method="get" id="product_filter_form" name="product_filter_form">
    <?php echo $this->getBlockHtml('formkey') ?>
<div class="block block-layered-nav">
    <div class="block-title">
        <strong><span><?php echo $this->__('Filter by:') ?></span></strong>
    </div>
    <?php if($this->getRequest()->getParam('q')) : ?>
        <input type="hidden" value="<?php echo $this->getRequest()->getParam('q') ?>" name='q' />
    <?php endif; ?>
    <?php echo $this->getStateHtml() ?>
    <?php if($this->canShowOptions()): ?>
        <div class="block-content">
            <p class="block-subtitle"><?php echo $this->__('Shopping Options') ?></p>

                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): if($_filter->getName() == 'Category') continue; ?>
                <?php if($_filter->getItemsCount()): ?>
                    <dl id="narrow-by-list" class="filterBy">
                        <dt id="<?php echo $this->__($_filter->getName()) ?>" class="" onClick="showhide('<?php echo $this->__($_filter->getName()) ?>');"><?php echo $this->__($_filter->getName()) ?></dt>
                        <dd id="<?php echo $this->__($_filter->getName()) ?>_content" style="display:none;"><?php echo $_filter->getHtml() ?>
                        </dd>
                    </dl>
                <?php endif; ?>
                <?php endforeach; ?>

            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
        </div>
    <?php endif; ?>
	<button class="btn-update right no-display" title="<?php echo $this->__('Update');?>" type="submit"></button>
</div>
</form>
<?php endif; ?>
