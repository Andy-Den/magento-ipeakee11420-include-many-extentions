/**
 * Top menu for store
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<div class="header-nav">
    <div id="menu-wrapper">
        <ul id="anav1" class="clearfix">
            <?php foreach ($this->getStoreCategories() as $_category): ?>
                <?php echo $this->drawItemTopLevel($_category,0,false,false) ?>
            <?php endforeach ?>
        </ul>

        <ul id="anav2" class="clearfix">
            <?php foreach ($this->getStoreCategories() as $_category): ?>
                <?php echo $this->drawItemTopLevel($_category,0,false,true) ?>
            <?php endforeach ?>
        </ul>
    </div>
    <?php echo $this->getChildHtml('topLeftLinks') ?>
</div>
<script>
    jQuery(document).ready(function($){
        minItem = Math.min($("#anav1 > li").size(),$("#anav2 > li").size());
        for(i=0;i<minItem;i++){
            minwidth    = minItem = Math.max($("> a",$("#anav1 > li").eq(i)).width(),$("> a",$("#anav2 > li").eq(i)).width());
            if (minwidth > $("> a",$("#anav1 > li").eq(i)).width()){
                $("> a",$("#anav1 > li").eq(i)).css("width",minwidth);
            }else{
                $("> a",$("#anav2 > li").eq(i)).css("width",minwidth);
            }
        }
    });
</script>