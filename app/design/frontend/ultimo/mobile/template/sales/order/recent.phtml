<?php
/**
 * - added labels for selected columns
 */
?>

<div class="col-1 recent-orders coll">
    <?php $_orders = $this->getOrders(); ?>
    <div class="box-title">
        <h3><span><?php echo $this->__('My Orders') ?></span></h3>
    </div>
    <div class="box-content">
        <?php echo $this->getChildHtml()?>
        <?php if( sizeof($_orders->getItems()) > 0 ):
            $i=1;
        ?>

            <?php foreach ($_orders as $_order): ?>
            <div class="order-items">
                <div class="grid1"><?php echo $this->__('Order #') ?></div>
                <div class="grid2"><a href="<?php echo $this->getViewUrl($_order) ?>" class="nobr"><?php echo $_order->getRealOrderId() ?></a></div>
                <div class="grid1"><?php echo $this->__('Date') ?></div>
                <div class="grid2"><?php echo $this->formatDate($_order->getCreatedAtStoreDate()) ?></div>
                <div class="grid1"><?php echo $this->__('Ship To') ?></div>
                <div class="grid2"><?php echo $_order->getShippingAddress() ? $this->escapeHtml($_order->getShippingAddress()->getName()) : '&nbsp;' ?></div>
                <div class="grid1"><?php echo $this->__('Order Total') ?></div>
                <div class="grid2"><?php echo $_order->formatPrice($_order->getGrandTotal()) ?></div>
                <div class="grid1"><?php echo $this->__('Status') ?></div>
                <div class="grid2"><?php echo $_order->getStatusLabel() ?></div>
            </div>
            <div class="view-order-lnk <?php echo ($i++ == sizeof($_orders->getItems()))?"last":"";?>"><a href="<?php echo $this->getViewUrl($_order) ?>" class="edit"><?php echo $this->__('View Order') ?></a>
                <?php if ($this->helper('sales/reorder')->canReorder($_order)) : ?>
                    <span class="separator">|</span> <a href="<?php echo $this->getReorderUrl($_order) ?>" class="link-reorder"><?php echo $this->__('Reorder') ?></a>
                <?php endif ?>
            </div>
            <div class="clear"></div>
        <?php endforeach; ?>

        <?php else: ?>
            <p><?php echo $this->__('You have placed no orders.'); ?></p>
        <?php endif; ?>
    </div>
</div>


