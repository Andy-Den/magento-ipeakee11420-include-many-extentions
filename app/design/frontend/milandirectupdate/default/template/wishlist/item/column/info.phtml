/* @var Mage_Wishlist_Model_Item $item */
$item = $this->getItem();
$product = $item->getProduct();
?>
<a class="product-image" href="<?php echo $this->getProductUrl($item) ?>" title="<?php echo $this->escapeHtml($product->getName()) ?>">
    <img src="<?php echo $this->helper('catalog/image')->init($product, 'small_image')->resize(96, 96); ?>" width="96" alt="<?php echo $this->escapeHtml($product->getName()) ?>" />
</a>
<div class="product-infor-wishlist">
    <h3 class="product-name">
        <a href="<?php echo $this->getProductUrl($item) ?>" title="<?php echo $this->escapeHtml($product->getName()) ?>"><?php echo $this->escapeHtml($product->getName()) ?></a>
    </h3>

    <?php if($this->getSortedChildren()): ?>
        <div class="item-manage">
            <?php foreach($this->getSortedChildren() as $childName):?>
                <?php echo $this->getChildHtml($childName, false);?>
            <?php endforeach;?>
        </div>
    <?php endif; ?>

    <textarea name="description[<?php echo $item->getWishlistItemId() ?>]" rows="3" cols="5" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Comment')) ?>" placeholder="<?php echo $this->__('Please, enter any comments...'); ?>"><?php echo ($this->escapeHtml($item->getDescription() ? $item->getDescription() : '')) ?></textarea>

</div>

