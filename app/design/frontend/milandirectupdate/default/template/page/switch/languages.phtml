/**
 * Store switcher template
 *
 * @see Mage_Core_Block_Store_Switcher
 */
?>
<div class="flag-country"></div>
<ul id="select-store">
    <?php $store = Mage::getModel('core/cookie')->get('store');
        if(empty($store) && Mage::getModel('core/store')->isStoreCookieSet())
            $store = Mage::getModel('core/store')->isStoreCookieSet();
        if(empty($store))
            $store = Mage::app()->getStore()->getCode();
    ?>
    <li class="mobile-country">
        <?php if($store == 'australia') : ?>
            <img src="<?php echo $this->getSkinUrl('images/flagAustralia.png') ?>" id="australia-flag">
        <?php elseif($store == 'united_kingdom') : ?>
            <img src="<?php echo $this->getSkinUrl('images/flagUnited Kingdom.gif') ?>">
        <?php endif;?>
    </li>
    <li <?php if($store == 'australia') echo 'class="current"'; ?> id="australia_flag"><a href="<?php echo Mage::app()->getStore('australia')->getBaseUrl(Mage_Core_Model_Store::URL_TYPE_LINK); ?>" title="<?php echo $this->__('Milan Direct Australia') ?>"><img src="<?php echo $this->getSkinUrl('images/flagAustralia.png') ?>" id="australia-flag"></a></li>

    <li <?php if($store == 'united_kingdom') echo 'class="current"'; ?> id="united_kingdom_flag"><a href="<?php echo Mage::app()->getStore('united_kingdom')->getBaseUrl(Mage_Core_Model_Store::URL_TYPE_LINK); ?>" id="united-kingdom-flag" title="<?php echo $this->__('Milan Direct UK') ?>"><img src="<?php echo $this->getSkinUrl('images/flagUnited Kingdom.gif') ?>"></a></li>
</ul>
