<div class="review-customer-list">
    <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
    <?php if( $this->getCollection() && $this->count()): ?>
        <?php echo $this->getToolbarHtml() ?>
        <table class="data-table" id="my-reviews-table">
            <col width="1" />
            <col width="1" />
            <col width="1">
            <col width="1" />
            <col width="1" />
            <thead>
            <tr>
                <th><?php echo $this->__('Created') ?></th>
                <th><?php echo $this->__('Product Name') ?></th>
                <th><?php echo $this->__('Rating') ?></th>
                <th><span class="nobr"><?php echo $this->__('Review') ?></span></th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
                <?php foreach ($this->getCollection() as $_review): ?>
                <tr>
                    <td class="created" data-rwd-label="<?php echo $this->__('Created') ?>"><span class="nobr"><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></span></td>
                    <td class="product-name" data-rwd-label="<?php echo $this->__('Product Name') ?>"><h2 class="product-name"><a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a></h2></td>
                    <td class="ratings-product" data-rwd-label="<?php echo $this->__('Rating') ?>">
                    <?php if($_review->getSum()): ?>
                        <div class="rating-box">
                            <div class="rating" style="width:<?php echo ( $_review->getSum() / $_review->getCount() ) ?>%;"></div>
                        </div>
                    <?php endif; ?>
                    </td>
                    <td class="review-product" data-rwd-label="<?php echo $this->__('Review') ?>"><span class="nobr"><?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?></td>
                    <td class="status" data-rwd-label=""><a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="nobr"><?php echo $this->__('See Details') ?></a></td>
                </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
        <script type="text/javascript">decorateTable('my-reviews-table')</script>
        <div class="toolbar-bottom">
            <?php echo $this->getToolbarHtml() ?>
        </div>
    <?php else: ?>
        <div class="fieldset">
            <form action="">
                <h2 class="legend"><?php echo $this->__('Review')?></h2>
            </form>
            <p><?php echo $this->__('You have submitted no reviews.') ?></p>
        </div>

    <?php endif; ?>
    <div class="buttons-set">
        <p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><small>&laquo; </small><?php echo $this->__('Back') ?></a></p>
    </div>
</div>
